<link rel="stylesheet" href="/public/css/view/restaurant.css" />
<div>
	<div id="header-container">
		<h1 id="restaurant-name">{{restaurant.name}}</h1>
		<p id="restaurant-address">{{restaurant.address}}</p>
	</div>
	<ul id="dishes">
		<li id="dishes-label"><h2>Dishes:</h2></li>
		{{#each dishes}}
			<li class="dish">
				<a href="/view/dish/{{this._id}}">
					<h2 class="dish-name">{{this.name}}</h2>
					<p class="dish-averageRating">Average Rating:
						{{this.averageRating}}</p>
				</a>
			</li>
		{{/each}}
	</ul>
</div>